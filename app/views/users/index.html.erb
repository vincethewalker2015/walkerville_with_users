<div class="well">
  <h2 align="center">All Users</h2>
</div>

<div align="center">
        <p>
          <%= link_to "Create a Blog", new_topic_path, class: "btn btn-success bttn" %>
          <%= link_to "View all Blogs", topics_path, class: "btn btn-primary bttn" %>
        </p>
           <div align="center">
             
               <% @users.each do |user| %>
             <div class="col-md-4 col-md-offset-4 well-index index-block" %>
               <h4>User: <%= user.name %></h4>
               <p align="center"><%= image_tag user.picture.url, class: "IndexSize" if user.picture? %></p>
               <br />
               <h5>Email: <%= user.email %></h5>
               <%= link_to "View User", user_path(user), class: "btn btn-info bttn" %>
                 <% if logged_in? &&  current_user.admin? %>
                  <%= link_to "Edit", edit_user_path(user), class: "btn btn-warning bttn" %>
                  <%= link_to "Delete", user_path(user), method: :delete, data: {confirm: "Are you sure??"}, 
                                                                      class: "btn btn-danger bttn" %> 
                <% end %>
              
             </div>
              
           <% end %>
             
        </div>
        
    </div>
   