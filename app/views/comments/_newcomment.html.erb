<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <!-- <h4>Comments</h4> -->
    <hr />
        <%= form_for([@topic, @comment], remote: true, :html => {class: "form-horizontal", role: "form"}) do |f| %>
          <div class="form-group">
            <div class="control-label col-md-2">
              <%= f.label :description, "Comments" , class: "lable-disappear"%>
            </div>
            <div class="col-md-8 comment-block">
              <%= f.text_area :description, rows: 5, class: "form-control com-form", placeholder: "Add a comment" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
              <%= f.submit "Add", class: "btn btn-success com-bttn" %>
            </div>
          </div>
         <% end %>
         <hr />
  </div>
</div>