<div class="well">
  <h2 align="center">Log In</h2>
</div>

<div class="row">
  <div class="col-md-12">

          <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
           
          <div class="form-group">
             <div class="control-label col-md-2">
                <%= f.label :email, class: 'labled' %> 
             </div>
             <div class="col-md-8">
               <%= f.email_field :email, class: 'form-control com-form', placeholder: "Enter your e-mail address here.." %>
             </div>
           </div>
           
            <div class="form-group">
               <div class="control-label col-md-2">
                  <%= f.label :password, class: 'labled' %> 
               </div>
               <div class="col-md-8">
                 <%= f.password_field :password, class: 'form-control com-form', placeholder: "Enter your Password..." %>
               </div>
           </div>


         <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                      <%= f.submit "Submit", class: "btn btn-primary bttn" %> 
                      <%= link_to "Users", users_path, class: "btn btn-warning bttn" %> 
                    </div>
                  </div>
                <% end %>
              </p>
          </div>
        </div>
        <%= render 'layouts/footer' %>